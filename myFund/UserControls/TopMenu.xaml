<UserControl x:Class="myFund.UserControls.TopMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myFund.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ToolBarTray Background="{DynamicResource PrimaryHueDarkBrush}" DockPanel.Dock="Top">
        <ToolBar Style="{DynamicResource MaterialDesignToolBar}" Background="{DynamicResource PrimaryHueDarkBrush}">
            <Button>
                <materialDesign:PackIcon Kind="Menu" Margin="-10,-15,0,0"
                                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                    <materialDesign:PackIcon.RenderTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
            </Button>
            <Label VerticalAlignment="Center" FontWeight="Light" FontSize="22">My Fund</Label>
            <Separator />
        </ToolBar>
    </ToolBarTray>
</UserControl>
